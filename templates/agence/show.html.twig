{% extends 'dashboard.html.twig' %}
{% block title %}Agence{% endblock %}

{% block body %}
    <h1>Agence {{ agence.nom }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ agence.id }}</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td>{{ agence.logo }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ agence.nom }}</td>
        </tr>
        <tr>
            <th>Pays</th>
            <td>{{ agence.pays }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ agence.ville }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ agence.adresse }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ agence.email }}</td>
        </tr>
        <tr>
            <th>Tel</th>
            <td>{{ agence.tel }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('agence_edit', {'id': agence.id}) }}"><button class="btn btn-block btn-warning">Modifier l'agence</button>  </a>
    <br>
    {{ include('agence/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('agence_index') }}"><button class="btn btn-block btn-secondary">Retourner Ã  la liste des agences</button></a>
{% endblock %}
