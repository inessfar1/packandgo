
{%  for offres in offres %}
    <tr>
        <td>{{ offres.name }}</td>
        <td>{{ offres.description }}</td>
        <td>{{ offres.price }} $ </td>
        <td>{{ offres.dateDebut|date('Y-m-d')}}</td>
        <td>{{ offres.dateFin|date('Y-m-d')}}</td>
        <td><img width="200" class="img-responsive" src="{{ asset('assets/images/packages/' ~ offres.image) }}"></td>
        <td>
            <div class="row">
                <a class="btn btn-primary col-6" href="{{path('modifOffre',{'id': offres.id})}}" >modifier</a>
                <form method="post" class="col-6" action="{{ path('supOffre',{'id': offres.id})}}" onsubmit="return confirm('Voulez vous supprimer ?')">
                    <input type="hidden" name="_method" value="SUP">
                    <input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ offres.id)}}">
                    <input type="submit" class="btn btn-danger w-100 " value="supprimer">
                </form>
            </div>
        </td>
        </td>
    </tr>
{% endfor %}