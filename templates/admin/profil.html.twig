{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body%}
    <section id="pack" class="packages">
        <div class="container">
            <div class="gallary-header text-center">
                <h2>
                   Votre Profil : Mr/Mme {{ app.user.nom }} {{ app.user.prenom }}
                </h2>
                <p>
                    Duis aute irure dolor in  velit esse cillum dolore eu fugiat nulla.
                </p>
            </div><!--/.gallery-header-->
            <div class="packages-content">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                    </div>

                    <div class="col-md-4 col-sm-6">
                        <div class="single-package-item">
                            <img src="{{ asset('images/aliments/' ~ app.user.image) }}" class="img-responsive" width="50" alt="package-place">
                            <div class="single-package-item-txt">
                                <h3>{{ app.user.nom}} <span class="pull-right">{{ app.user.prenom}}</span></h3>
                                <div class="packages-para">
                                    <p>
											<span>
												<i class="fa fa-envelope-o"></i> E-mail:
											</span>
                                        <i class="fa fa-angle-right"></i> {{app.user.email }}
                                    </p>
                                    <p>
											<span>
											 <i class="fa fa-user"></i> UserName
											</span>
                                        <i class="fa fa-angle-right"></i> {{ app.user.username }}
                                    </p>
                                </div><!--/.packages-para-->

                                <div class="about-btn">
                                    <button class="about-view packages-btn"><a href="{{ path('profil_modification',{'id' : app.user.id}) }}">Modifier profil
                                        </a>


                                    </button>
                                </div><!--/.about-btn-->
                            </div><!--/.single-package-item-txt-->
                        </div><!--/.single-package-item-->

                    </div><!--/.col-->

            </div><!--/.packages-content-->
        </div><!--/.container-->
        </div>
    </section>



{% endblock %}