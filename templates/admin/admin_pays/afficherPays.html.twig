{% extends 'dashboard.html.twig' %}

{% block title %}affichage des pays{% endblock %}
{% block body %}
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Les Pays</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="example2" class="table table-bordered table-hover">
                                            {% for message in app.flashes('success') %}
                                                <div class="alert alert-success">
                                                    {{ message }}
                                                </div>
                                            {% endfor %}
                                            <a class="btn btn-success" href="{{ path('AjoutPays') }}" >Ajouter</a>
                                            <thead>
                                            <tr class="text-center">
                                                <th>name</th>
                                                <th>Continent</th>
                                                <th>description</th>
                                                <th>image</th>
                                                <th>actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for pays in pays  %}
                                                <tr class="text-center">
                                                    <td>{{ pays.name }}</td>
                                                    <td>{{ pays.continent }}</td>
                                                    <td>{{ pays.description }}</td>
                                                    <td><img width="200px" class="img-responsive" src="{{ asset('assets/images/gallary/' ~ pays.image)}}" ></td>
                                                    <td>
                                                        <div class="row">
                                                            <a class="btn btn-primary col-6" href="{{path('modifierPays',{'id': pays.id})}}" >modifier</a>
                                                            <form method="post" class="col-6 " action="{{ path('supPays',{'id': pays.id})}}" onsubmit="return confirm('Voulez vous supprimer ?')">
                                                                <input type="hidden" name="_method" value="SUP">
                                                                <input type="hidden" name="_token" value="{{csrf_token('SUP' ~ pays.id)}}">
                                                                <input type="submit" class="btn btn-danger w-100" value="supprimer">
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.card-body -->
                                </div>

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
            </div>
        </section>
    </div>

    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

{% endblock %}


