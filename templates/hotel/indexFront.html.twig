{% extends 'base.html.twig' %}
{% block title %} Hotels {% endblock %}
{% block body %}

    <section id="pack" class="packages">
        <div class="container">
            <div class="gallary-header text-center">
                <h2>
                    Les Hotels
                </h2>

            </div><!--/.gallery-header-->
            <div class="packages-content">

                {% for hotel in hotels %}
                    <div class="col-md-4 col-sm-6">
                        <div class="single-package-item">
                            <img src="{{ asset('images/hotels/' ~ hotel.image) }}" alt="package-place">
                            <div class="single-package-item-txt">
                                <h3>{{hotel.nom}} </h3>
                                <div class="packages-para">
                                    <p>
											<span>
												<i class="fa fa-angle-right"></i> Tel
											</span>
                                        <i class="fa fa-angle-right"></i>  {{ hotel.num }}</i>
                                    </p>
                                    <p>
											<span>
												<i class="fa fa-angle-right"></i> nombre d'Ã©toiles
											</span>
                                        <i class="fa fa-angle-right"></i>  {% for d in 1..hotel.etoile %}<i class="fa fa-star"></i>{%  endfor %}
                                    </p>



                                </div><!--/.packages-para-->
                                <!--/.packages-review-->
                                <div class="about-btn"><form action="{{ path('chambre_front' , {'id' : hotel.id}) }}">
                                        <button  class="about-view packages-btn">
                                            Book now
                                        </button></form>
                                </div><!--/.about-btn-->
                            </div><!--/.single-package-item-txt-->
                        </div><!--/.single-package-item-->

                    </div>

                {% endfor %}


            </div><!--/.packages-content-->
        </div><!--/.container-->

    </section>


{% endblock %}