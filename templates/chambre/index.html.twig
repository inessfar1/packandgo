{% extends 'Dashboard.html.twig' %}

{% block title %} Liste des Chambres {% endblock %}

{% block body %}
    <h1>Chambres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Vue</th>
                <th>Duree</th>
                <th>Prix</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.type }}</td>
                <td>{{ chambre.vue }}</td>
                <td>{{ chambre.duree }}</td>
                <td>{{ chambre.prix }}</td>
                <td><img width="100" src="{{ asset('images/chambres/' ~ chambre.image) }}"></td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chambre_new') }}">Create new</a>
{% endblock %}
