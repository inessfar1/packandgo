
{% extends 'Dashboard.html.twig' %}

{% block title %} Liste des Chambres {% endblock %}
{% block body %}
    <h1 align="centre"> liste des chmabres</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Vue</th>
            <th>Duree</th>
            <th>Prix</th>

        </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.type }}</td>
                <td>{{ chambre.vue }}</td>
                <td>{{ chambre.duree }}</td>
                <td>{{ chambre.prix }}</td>

            </tr>


        {% endfor %}
        </tbody>
    </table>


{% endblock %}


