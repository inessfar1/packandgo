{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body%}

<br>
    <div style="margin-left: 700px" class="about-btn">
        <button style=" height:80px;width: 400px;"  class="about-view packages-btn" >
        <a href="{{ path("ajouterCF") }}" >
            Ajouter Categorie
        </a>
        </button>
        <br>
    </div>
         {% for categorie in categorie %}
                    <div class="col-md-3 col-sm-4">
                        <div class="single-package-item">

                            <div class="single-package-item-txt">
                                <h3>{{ categorie.Title}} <span class="pull-right"></span></h3>
                                <div class="packages-para">
                                    <p>
											<span>
												<i class="fa fa-envelope-o"></i> Description:
											</span>
                                        <i class="fa fa-angle-right"></i> {{categorie.description }}
                                    </p>
                                    <p>
											<span>
											 <i class="fa fa-user"></i> Par:
											</span>
                                        <i class="fa fa-angle-right"></i> {{ categorie.utilisateur.username }}
                                    </p>
                                </div><!--/.packages-para-->

                                <div class="about-btn">
                                    <button class="about-view packages-btn">
                                    <a href="{{ path("frontCD",{"id":categorie.id}) }}"  >
                                        Detail
                                    </a></button>
                                </div><!--/.about-btn-->
                            </div><!--/.single-package-item-txt-->
                        </div><!--/.single-package-item-->

                    </div><!--/.col-->

    {% endfor %}




{% endblock %}