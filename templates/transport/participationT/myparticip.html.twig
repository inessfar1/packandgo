{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">MES TRAJETS</h3>
        </div>
        <div class="card-body p-0">
            <table id="chauffeur" class="table table-striped">
                <thead>
                <tr>
                    <th>Date depart</th>
                    <th>Date d'arrivée</th>
                    <th>point de depart</th>
                    <th>point d'arrivée</th>
                    <th>prix</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for pr in participation %}
                    <tr>
                        <td>{{ pr.idTrajet.dateDepart|date('Y-m-d') }}</td>
                        <td>{{ pr.idTrajet.dateArrive|date('Y-m-d') }}</td>
                        <td>{{ pr.idTrajet.ptDepart }}</td>
                        <td>{{ pr.idTrajet.ptArrive }}</td>
                        <td>{{ pr.idTrajet.prix }}</td>
                         <td>
                        <a class="btn btn-block btn-danger" href="{{ path('annuler_particp',{'id':pr.id}) }}" > Annuler</a>
                             <a class="btn btn-block btn-info" href="{{ path('paymentparticipation',{'id':pr.id}) }}" > payment</a>
                    </td>

                    </tr>


                {% endfor %}
                </tbody>

            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(participation) }}
        </div>
