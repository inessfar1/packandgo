{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">MES TRAJETS</h3>

        </div>

        <div class="card-body p-0">

            <div class="container">
                <a class="btn btn-block btn-success" href="{{ 'list_trajetAsc' }}" >Order By prix asc </a>
                <a class="btn btn-block btn-success" href="{{ 'list_trajetDesc' }}" >Order By prix Desc </a>
            </div>
            <table id="chauffeur" class="table table-striped">
                <thead>
                <tr>
                    <th>Date depart</th>
                    <th>Date d'arrivée</th>
                    <th>point de depart</th>
                    <th>point d'arrivée</th>
                    <th>prix</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for tr in trajet %}
                    <tr>
                        <td>{{ tr.dateDepart|date('Y-m-d') }}</td>
                        <td>{{ tr.dateArrive|date('Y-m-d') }}</td>
                        <td>{{ tr.ptDepart }}</td>
                        <td>{{ tr.ptArrive }}</td>
                        <td>{{ tr.prix }}</td>


                        <td>
                            <a class="btn btn-block btn-success" href="{{ path('participerT',{'idTrajet':tr.idTrajet}) }}" >Participer </a>
                        </td>

                        </td>
                    </tr>


                {% endfor %}
                </tbody>

            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(trajet) }}
        </div>
        <!--Start of Tawk.to Script-->

        <!--End of Tawk.to Script-->
    </div>
{% endblock body %}
