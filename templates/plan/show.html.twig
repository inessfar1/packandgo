{% extends './backend/dashboard.html.twig' %}

{% block title %}Plan{% endblock %}

{% block body %}
    <h1>Plan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plan.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plan.image }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ plan.sujet }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plan.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ plan.date ? plan.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plan.prix }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('plan_edit', {'id': plan.id}) }}"><button class="btn btn-block btn-warning">Modifier l'agence</button>  </a>
    <br>
    {{ include('plan/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('plan_index') }}"><button class="btn btn-block btn-secondary">Retourner Ã  la liste des plans</button></a>




{% endblock %}
