{% extends 'dashboard.html.twig' %}
{% block title %}categorie{% endblock %}

{% block body %}

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"> Categorie</h3>
                        </div>
                        <br>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Description</th>

                                <th>Modifier/Supprimer</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for e in forum %}
                                <tr >
                                    <th >{{ e.id }}</th>
                                    <td>{{ e.title }}</td>
                                    <td>{{ e.description }}</td>





                                    <td><a class="btn btn-round btn-info" href="{{ path("modifierC",{"id":e.id}) }}">Modifier </a>
                                        <a class="btn btn-round btn-danger" href="{{ path("supprimerC",{"id":e.id}) }}">Supprimer</a></td>
                                </tr>
                            {% endfor %}

                            </tbody>

                        </table>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-12">
                        <a href={{ path("ajouterC") }} type="button" class="btn btn-primary btn-lg btn-block">Ajouter Categorie</a>
                    </div>
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
    </section>

    </div>
{% endblock %}